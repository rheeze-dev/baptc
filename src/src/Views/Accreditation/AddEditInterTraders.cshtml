@model src.Models.InterTraders
@{
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">Add / Edit Data</h4>
</div>
<form onsubmit="return SubmitAddEdit(this)">
    <div class="box-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        @*<input type="hidden" asp-for="organizationId" />*@
        @*<div class="form-group">
            <label asp-for="Date" class="control-label">Date</label>
            <div class="input-group date form_datetime" data-date="1" data-date-format="MM dd yyyy - HH:ii p" data-link-field="Date">
                <input asp-for="Date" class="form-control" size="16" type="text" value="" readonly>
                <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
            </div>
            <input type="hidden" id="dtp_input1" value="" />
        </div>*@
        <div class="row">
            <div class="col-lg-6 form-group">
                <label asp-for="Counter" class="control-label"></label>
                <input asp-for="Counter" class="form-control" />
                <span asp-validation-for="Counter" class="text-danger"></span>
            </div>
            <div class="col-lg-6 form-group">
                <label asp-for="NameOfAssociation" class="control-label">Name of association</label>
                <input asp-for="NameOfAssociation" class="form-control" />
                <span asp-validation-for="NameOfAssociation" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 form-group">
                <label asp-for="ReferenceNumber" class="control-label">Reference number</label>
                <input asp-for="ReferenceNumber" class="form-control" />
                <span asp-validation-for="ReferenceNumber" class="text-danger"></span>
            </div>
            <div class="col-lg-6 form-group">
                <label asp-for="IdNumber" class="control-label">Id number</label>
                <input asp-for="IdNumber" class="form-control" />
                <span asp-validation-for="IdNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-lg-6 form-group">
                <label asp-for="NameOfSpouse" class="control-label">Name of spouse</label>
                <input asp-for="NameOfSpouse" class="form-control" />
                <span asp-validation-for="NameOfSpouse" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 form-group">
                <label asp-for="PresentAddress" class="control-label">Present address</label>
                <input asp-for="PresentAddress" class="form-control" />
                <span asp-validation-for="PresentAddress" class="text-danger"></span>
            </div>
            <div class="col-lg-6 form-group">
                <label asp-for="Barangay" class="control-label"></label>
                <input asp-for="Barangay" class="form-control" />
                <span asp-validation-for="Barangay" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 form-group">
                <label asp-for="ContactNumber" class="control-label">Contact number</label>
                <input asp-for="ContactNumber" class="form-control" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>
            <div class="col-lg-6 form-group">
                <label asp-for="Tin" class="control-label"></label>
                <input asp-for="Tin" class="form-control" />
                <span asp-validation-for="Tin" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
                <div class="col-lg-6 form-group">
                    <label asp-for="BusinessPermit" class="control-label">Business permit</label>
                    <input asp-for="BusinessPermit" class="form-control" />
                    <span asp-validation-for="BusinessPermit" class="text-danger"></span>
                </div>
                <div class="col-lg-6 form-group">
                    <label asp-for="Destination" class="control-label"></label>
                    <select id="cars" asp-for="Destination" class="form-control">
                        <option value="Spot 1">Spot 1</option>
                        <option value="Spot 2">Spot 2</option>
                        <option value="Spot 3">Spot 3</option>
                        <option value="Dry and cold storage">Dry and cold storage</option>
                        <option value="Pay parking">Pay parking</option>
                        <option value="Entrance">Entrance</option>
                        <option value="Exit">Exit</option>
                        <option value="Carrot section">Carrot section</option>
                        <option value="Nursery (greenhouse)">Nursery (greenhouse)</option>
                        <option value="UPLB cold storage back of guestel">UPLB cold storage back of guestel</option>
                        <option value="Sewarage treatment plant back of guestel">Sewarage treatment plant back of guestel</option>
                    </select>
                    <span asp-validation-for="Destination" class="text-danger"></span>
                </div>
            </div>
        </div>

            <div class="box-footer">
                <button type="submit" class="btn btn-primary pull-right"><i class="fa fa-save"></i> Submit</button>
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
            </div>
</form>
