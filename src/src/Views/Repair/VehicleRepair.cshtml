@model src.Models.Organization
@{
    ViewData["Title"] = "Repair";
    Layout = "_LayoutAdminlteRepair";
}

<!-- Content Header (Page header) -->
<!-- Main content -->
<link rel="stylesheet" href="~/lib/DateTimePicker/bootstrap-datetimepicker.min.css" />
<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <input type="hidden" asp-for="@Model.organizationId" />
                            @*<div class="col-lg-2">
                                <div class="row">*@
                            <div class="col-md-6">
                                <a class="btn btn-success" style="margin-bottom:10px" onclick="ShowPopup('@Url.Action("AddEditVehicleRepair","Repair", new { org = Model.organizationId })')"><i class="fa fa-plus"></i> New vehicle repair</a>
                            </div>
                            @*</div>
                                </div>*@
                            <table id="grid" name="grid" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th class="col-md-1">Date</th>
                                        <th class="col-md-1">Time</th>
                                        <th class="col-md-1">Plate number</th>
                                        <th class="col-md-1">Trip/Destination</th>
                                        <th class="col-md-1">Driver name</th>
                                        <th class="col-md-1">Location of repair</th>
                                        <th class="col-md-1">Repair details</th>
                                        <th class="col-md-1">Remarks</th>
                                        <th class="col-md-1">Requester</th>
                                        <th class="col-md-1">Request number</th>
                                        <th class="col-md-1">Action</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

</section>
<!-- /.content -->
<!--modal placeholder-->
<div class="modal modal-primary fade" id="modalDefault">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>



@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/views/security/securityRepairCheck.js"></script>
    <script src="~/lib/DateTimePicker/bootstrap-datetimepicker.min.js"></script>
}

