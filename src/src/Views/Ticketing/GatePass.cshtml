@model src.Models.Organization
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Ticketing";
    ApplicationUser appUser = await UserManager.GetUserAsync(User);
    Layout = "_LayoutAdminlteTicketing";
}

<!-- Content Header (Page header) -->
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-md-6">
                                <a class="btn btn-success" style="margin-bottom:10px" onclick="ShowPopup('@Url.Action("AddEditGatePass","Ticketing", new { org = Model.organizationId })')"><i class="fa fa-plus"></i> New stall leaser</a>
                            </div>
                            <input type="hidden" asp-for="@Model.organizationId" />
                            <table id="grid" name="grid" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th class="col-md-1">Start date</th>
                                        @*<th class="col-md-1">Expiry date</th>*@
                                        @*<th class="col-md-1">Drivers name</th>*@
                                        @*<th class="col-md-1">Last name</th>*@
                                        @*<th class="col-md-1">Birth date</th>*@
                                        @*<th class="col-md-1">Contact number</th>*@
                                        <th class="col-md-1">Plate number 1</th>
                                        <th class="col-md-1">Plate number 2</th>
                                        @*<th class="col-md-1">Id type</th>
                                            <th class="col-md-1">Id number</th>*@
                                        <th class="col-md-1">Remarks</th>
                                        @*<th class="col-md-1">Remaining days</th>*@
                                        <th class="col-md-1">Status</th>
                                        <th class="col-md-1">Action</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

</section>
<!-- /.content -->
<!--modal placeholder-->
<div class="modal modal-primary fade" id="modalDefault">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>



@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    @if (appUser.isAdmin == false)
    {
        <script src="~/js/views/ticketing/gatePass.js"></script>
    }
    else if (appUser.isAdmin == true)
    {
        <script src="~/js/views/ticketing/gatePassIsAdmin.js"></script>
    }
}

