        <div class="form-group">
            <label asp-for="Facilitator" class="control-label">Facilitator</label>
            <input asp-for="Facilitator" class="form-control" />
            <span asp-validation-for="Facilitator" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="Commodity" class="control-label"></label>
                    <input asp-for="Commodity" class="form-control" />
                    <span asp-validation-for="Commodity" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="Volume" class="control-label"></label>
                    <input asp-for="Volume" class="form-control" />
                    <span asp-validation-for="Volume" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Destination" class="control-label"></label>
            <input asp-for="Destination" class="form-control" />
            <span asp-validation-for="Destination" class="text-danger"></span>
        </div>
    </div>
