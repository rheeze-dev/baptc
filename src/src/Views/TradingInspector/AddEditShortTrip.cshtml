@model src.Models.ShortTrip
@{
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">Edit In</h4>
</div>
<form onsubmit="return SubmitAddEdit(this)">
    <div class="box-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ticketingId" />
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="TimeIn" />

        <div class="row">
            <div class="col-lg-6 form-group">
                <label asp-for="PlateNumber" class="control-label">Plate number</label>
                <input asp-for="PlateNumber" class="form-control" readonly />
                <span asp-validation-for="PlateNumber" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="CommodityIn" class="control-label">Commodity (In)</label>
                    <input asp-for="CommodityIn" class="form-control" />
                    <span asp-validation-for="CommodityIn" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="EstimatedVolumeIn" class="control-label">Estimated volume (In)</label>
                    <input asp-for="EstimatedVolumeIn" class="form-control" />
                    <span asp-validation-for="EstimatedVolumeIn" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="RemarksIn" class="control-label">Remarks (In)</label>
                    <input asp-for="RemarksIn" class="form-control" />
                    <span asp-validation-for="RemarksIn" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="box-footer">
        <button type="submit" class="btn btn-primary pull-right"><i class="fa fa-save"></i> Submit</button>
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
    </div>
</form>
<script>
    Ladda.bind('.btn', { timeout: 1000 });
    $('.form_datetime').datetimepicker({
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        showMeridian: 1
    });
</script>



