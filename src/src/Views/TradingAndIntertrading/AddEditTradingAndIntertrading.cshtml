@model src.Models.InterTrading
@{
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">Add / Edit Data</h4>
</div>
<form onsubmit="return SubmitAddEdit(this)">
    <div class="box-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Code" />

        <div class="form-group">
            <label asp-for="FarmerName" class="control-label">Farmers name</label>
            <input asp-for="FarmerName" class="form-control" />
            <span asp-validation-for="FarmerName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FarmersOrganization" class="control-label">Farmers organization</label>
            <input asp-for="FarmersOrganization" class="form-control" />
            <span asp-validation-for="FarmersOrganization" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="Commodity" class="control-label"></label>
                    <input asp-for="Commodity" class="form-control" />
                    <span asp-validation-for="Commodity" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="Volume" class="control-label"></label>
                    <input asp-for="Volume" class="form-control" />
                    <span asp-validation-for="Volume" class="text-danger"></span>
                </div>
            </div>
        </div>

            <div class="form-group">
                <label asp-for="ProductionArea" class="control-label">Production area</label>
                <input asp-for="ProductionArea" class="form-control" />
                <span asp-validation-for="ProductionArea" class="text-danger"></span>
            </div>

    </div>

    <div class="box-footer">
        <button type="submit" class="btn btn-primary pull-right"><i class="fa fa-save"></i> Submit</button>
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
    </div>
</form>
<script>
    Ladda.bind('.btn', { timeout: 1000 });
</script>



