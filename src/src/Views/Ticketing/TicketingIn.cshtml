@model src.Models.Organization
@{
    ViewData["Title"] = "Ticketing";
    Layout = "_LayoutAdminlteTicketing";
}

<!-- Content Header (Page header) -->
<!-- Main content -->
<link rel="stylesheet" href="~/lib/DateTimePicker/bootstrap-datetimepicker.min.css" />
<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-md-6">
                                <a class="btn btn-success" style="margin-bottom:10px" onclick="ShowPopup('@Url.Action("AddEditIn","Ticketing", new { org = Model.organizationId })')"><i class="fa fa-plus"></i> New ticket</a>
                            </div>
                            <input type="hidden" asp-for="@Model.organizationId" />
                            <table id="grid" name="grid" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        @*<th class="col-md-2">Date entered</th>*@
                                        <th class="col-md-1">Time in</th>
                                        @*<th class="col-md-2">Date left</th>*@
                                        <th class="col-md-1">Time out</th>
                                        <th class="col-md-1">Plate number</th>
                                        <th class="col-md-1">Type of transaction</th>
                                        <th class="col-md-1">Type of entry</th>
                                        <th class="col-md-1">Drivers name</th>
                                        <th class="col-md-1">Remarks</th>
                                        <th class="col-md-1">Count</th>
                                        <th class="col-md-1">Issuing clerk</th>
                                        <th class="col-md-1">Receiving clerk</th>
                                        <th class="col-md-1">Control number</th>
                                        <th class="col-md-1">Status</th>
                                        <th class="col-md-1">Action</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
      
    </div>

</section>
<!-- /.content -->
<!--modal placeholder-->
<div class="modal modal-primary fade" id="modalDefault">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>



@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/views/ticketing/index.js"></script>
    <script src="~/lib/DateTimePicker/bootstrap-datetimepicker.min.js"></script>
}

