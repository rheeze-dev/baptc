@model src.Models.PriceCommodity
@{
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">View Data</h4>
</div>

<form onsubmit="return SubmitAddEdit(this)">
    <div class="box-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="priceCommodityId" />

        <div class="row">
            <div class="col-lg-6 form-group">
                <label asp-for="commodityDate">Date: </label>
                <label class="text-warning">@Model.commodityDate.ToString("MMMM dd, yyyy / hh:mm tt")</label>
            </div>
            <div class="col-lg-6 form-group">
                <label asp-for="classVariety">Class variety: </label>
                <label class="text-warning">@Model.classVariety</label>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6 form-group">
                <label asp-for="commodity">commodity: </label>
                <label class="text-warning">@Model.commodity</label>
            </div>
            <div class="col-lg-6 form-group">
                <div class="form-group">
                    <label asp-for="commodityRemarks">commodityRemarks: </label>
                    <label class="text-warning">@Model.commodityRemarks</label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6 form-group">
                <div class="form-group">
                    <label asp-for="priceRange">Price range: </label>
                    <label class="text-warning">@Model.priceRange</label>
                </div>
            </div>
        </div>

    </div>
    <div class="box-footer">
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
    </div>
</form>
<script>
    Ladda.bind('.btn', { timeout: 1000 });
    $('.form_datetime').datetimepicker({
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        showMeridian: 1
    });
</script>



