@model src.Models.Ticketing
@{
    Layout = null;
}
<style>
  
.default {
  display: none;
}

</style>
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">Debit</h4>
</div>

<form onsubmit="return SubmitAddEditDebit(this)">
    <div class="box-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ticketingId" />
        <input type="hidden" asp-for="controlNumber" />
        <input type="hidden" asp-for="timeOut" />

        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="plateNumber" class="control-label">Plate number</label>
                    <input asp-for="plateNumber" class="form-control" readonly />
                    <span asp-validation-for="plateNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-6 form-group">
                <label asp-for="DebitAmount" class="control-label">Amount</label>
                <input asp-for="DebitAmount" class="form-control" />
                <span asp-validation-for="DebitAmount" class="text-danger"></span>
            </div>
        </div>

    </div>

    <div class="box-footer">
        <button type="submit" class="btn btn-primary pull-right"><i class="fa fa-save"></i> Submit</button>
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
    </div>
</form>
<script>
    Ladda.bind('.btn', { timeout: 1000 });
    $('.form_datetime').datetimepicker({
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        showMeridian: 1
    });
</script>



