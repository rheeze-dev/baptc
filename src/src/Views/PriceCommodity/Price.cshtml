@model src.Models.Organization
@{
    ViewData["Title"] = "Price Commodity";
    Layout = "_LayoutAdminltePriceCommodity";
}

<!-- Content Header (Page header) -->
<!-- Main content -->
    <link rel="stylesheet" href="~/lib/DateTimePicker/bootstrap-datetimepicker.min.css" />
<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="row">
                        <div class="col-lg-12">
                                    <div class="col-md-6">
                                        <a class="btn btn-success" style="margin-bottom:10px" onclick="ShowPopup('@Url.Action("AddEditPrice","PriceCommodity", new { org = Model.organizationId })')"><i class="fa fa-plus"></i> New price</a>
                                    </div>
                            <input type="hidden" asp-for="@Model.organizationId" />
                            <table id="grid" name="grid" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th class="col-md-2">Date</th>
                                        @*<th class="col-md-2">Time</th>*@
                                        <th class="col-md-1">Class variety</th>
                                        <th class="col-md-2">Commodity</th>
                                        <th class="col-md-2">Commodity remarks</th>
                                        <th class="col-md-2">Price range</th>
                                        <th class="col-md-1">Action</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    
    </div>

</section>
<!-- /.content -->
<!--modal placeholder-->
<div class="modal modal-primary fade" id="modalDefault">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>



@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/views/priceCommodity/index.js"></script>
    <script src="~/lib/DateTimePicker/bootstrap-datetimepicker.min.js"></script>
}

