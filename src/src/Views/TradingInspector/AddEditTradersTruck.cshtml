@model src.Models.TradersTruck
@{
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">Add / Edit Data</h4>
</div>
<form onsubmit="return SubmitAddEdit(this)">
    <div class="box-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ticketingId" />
        <input type="hidden" asp-for="TimeIn" />

        <div class="form-group">
            <label asp-for="PlateNumber" class="control-label">Plate number</label>
            <input asp-for="PlateNumber" class="form-control" readonly />
            <span asp-validation-for="PlateNumber" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-lg-6 form-group">
                <label asp-for="TraderName" class="control-label">Trader name</label>
                <input asp-for="TraderName" class="form-control" />
                <span asp-validation-for="TraderName" class="text-danger"></span>
            </div>
            <div class="col-lg-6 form-group">
                <label asp-for="Destination" class="control-label">Destination</label>
                <input asp-for="Destination" class="form-control" />
                <span asp-validation-for="Destination" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="EstimatedVolume" class="control-label">Estimated volume (kg)</label>
                    <input asp-for="EstimatedVolume" class="form-control" />
                    <span asp-validation-for="EstimatedVolume" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="Remarks" class="control-label">Remarks</label>
                    <input asp-for="Remarks" class="form-control" />
                    <span asp-validation-for="Remarks" class="text-danger"></span>
                </div>
            </div>
        </div>

    </div>
    @*<div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="website" class="control-label"></label>
                    <input asp-for="website" class="form-control" />
                    <span asp-validation-for="website" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="linkedin" class="control-label"></label>
                    <input asp-for="linkedin" class="form-control" />
                    <span asp-validation-for="linkedin" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="customerType" class="control-label"></label>
            <select asp-for="customerType" class="form-control" asp-items="Html.GetEnumSelectList<src.Enum.CustomerType>()"></select>
            <span asp-validation-for="customerType" class="text-danger"></span>
        </div>*@

    <div class="box-footer">
        <button type="submit" class="btn btn-primary pull-right"><i class="fa fa-save"></i> Submit</button>
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
    </div>
</form>
<script>
    Ladda.bind('.btn', { timeout: 1000 });
    $('.form_datetime').datetimepicker({
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        showMeridian: 1
    });
</script>



