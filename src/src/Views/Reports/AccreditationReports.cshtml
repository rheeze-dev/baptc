@model src.Models.Organization
@{
    ViewData["Title"] = "Reports";
    Layout = "_LayoutAdminlteReports";
}

<!-- Content Header (Page header) -->
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <input type="hidden" asp-for="@Model.organizationId" />
                            <table id="grid" name="grid" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th colspan="3"><center>Accreditation</center></th>
                                    </tr>
                                    <tr>
                                        <th class="col-md-1">
                                            Accredited inter-traders
                                        </th>
                                        <th class="col-md-1">
                                        </th>
                                        <th class="col-md-1">
                                            <a class="btn btn-success btn-xs exportAccreditedInterTraders"><i class='fa fa-download'></i> Export</a>
                                        </th>
                                    </tr>

                                    <tr>
                                        <th colspan="3"></th>
                                    </tr>
                                    <tr>
                                        <th class="col-md-1">
                                            Accredited packers and porters
                                        </th>
                                        <th class="col-md-1">
                                        </th>
                                        <th class="col-md-1">
                                            <a class="btn btn-success btn-xs exportAccreditedPackersAndPorters"><i class='fa fa-download'></i> Export</a>
                                        </th>
                                    </tr>

                                    <tr>
                                        <th colspan="3"></th>
                                    </tr>
                                    <tr>
                                        <th class="col-md-1">
                                            Accredited buyers
                                        </th>
                                        <th class="col-md-1">
                                        </th>
                                        <th class="col-md-1">
                                            <a class="btn btn-success btn-xs exportAccreditedBuyers"><i class='fa fa-download'></i> Export</a>
                                        </th>
                                    </tr>

                                    <tr>
                                        <th colspan="3"></th>
                                    </tr>
                                    <tr>
                                        <th class="col-md-1">
                                            Accredited market facilitators
                                        </th>
                                        <th class="col-md-1">
                                        </th>
                                        <th class="col-md-1">
                                            <a class="btn btn-success btn-xs exportAccreditedMarketFacilitators"><i class='fa fa-download'></i> Export</a>
                                        </th>
                                    </tr>

                                    <tr>
                                        <th colspan="3"></th>
                                    </tr>
                                    <tr>
                                        <th class="col-md-1">
                                            Accredited individual farmers
                                        </th>
                                        <th class="col-md-1">
                                        </th>
                                        <th class="col-md-1">
                                            <a class="btn btn-success btn-xs exportAccreditedIndividualFarmers"><i class='fa fa-download'></i> Export</a>
                                        </th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
<!-- /.content -->
<!--modal placeholder-->
<div class="modal modal-primary fade" id="modalDefault">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
<script>
    $(".exportAccreditedInterTraders").on("click", function (e) {
        $(".exportAccreditedInterTraders").attr("href", "/api/Report/AccreditedInterTradersReport");
    });

    $(".exportAccreditedPackersAndPorters").on("click", function (e) {
        $(".exportAccreditedPackersAndPorters").attr("href", "/api/Report/AccreditedPackersAndPortersReport");
    });

    $(".exportAccreditedBuyers").on("click", function (e) {
        $(".exportAccreditedBuyers").attr("href", "/api/Report/AccreditedBuyersReport");
    });

    $(".exportAccreditedMarketFacilitators").on("click", function (e) {
        $(".exportAccreditedMarketFacilitators").attr("href", "/api/Report/AccreditedMarketFacilitatorsReport");
    });

    $(".exportAccreditedIndividualFarmers").on("click", function (e) {
        $(".exportAccreditedIndividualFarmers").attr("href", "/api/Report/AccreditedIndividualFarmersReport");
    });
</script>
}

