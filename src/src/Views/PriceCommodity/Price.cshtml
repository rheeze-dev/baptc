@model src.Models.Organization
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Price Commodity";
    ApplicationUser appUser = await UserManager.GetUserAsync(User);
    Layout = "_LayoutAdminltePriceCommodity";
}

<!-- Content Header (Page header) -->
<!-- Main content -->
@if (appUser.isAdmin == false)
{
    <section class="content">
        <div class="row">
            <div class="col-lg-12">
                <div class="box box-primary">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="col-md-6">
                                    <a class="btn btn-success" style="margin-bottom:10px" onclick="ShowPopup('@Url.Action("AddEditPrice","PriceCommodity", new { org = Model.organizationId })')"><i class="fa fa-plus"></i> New price</a>
                                </div>
                                <input type="hidden" asp-for="@Model.organizationId" />
                                <table id="grid" name="grid" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            @*<th class="col-md-1">Class variety</th>*@
                                            <th class="col-md-1">Datetime</th>
                                            <th class="col-md-1">Commodity</th>
                                            <th class="col-md-1">Class variety</th>
                                            <th class="col-md-1">Price (Low)</th>
                                            <th class="col-md-1">Price (High)</th>
                                            <th class="col-md-1">Remarks</th>
                                            <th class="col-md-1">Control number</th>
                                            <th class="col-md-1">Entered by</th>
                                            @*<th class="col-md-1">Action</th>*@
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>

    </section>
}
else
{
<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-md-6">
                                <a class="btn btn-success" style="margin-bottom:10px" onclick="ShowPopup('@Url.Action("AddEditPrice","PriceCommodity", new { org = Model.organizationId })')"><i class="fa fa-plus"></i> New price</a>
                            </div>
                            <input type="hidden" asp-for="@Model.organizationId" />
                            <table id="grid" name="grid" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        @*<th class="col-md-1">Class variety</th>*@
                                        <th class="col-md-1">Datetime</th>
                                        <th class="col-md-1">Commodity</th>
                                        <th class="col-md-1">Class variety</th>
                                        <th class="col-md-1">Price (Low)</th>
                                        <th class="col-md-1">Price (High)</th>
                                        <th class="col-md-1">Price (Average)</th>
                                        <th class="col-md-1">Remarks</th>
                                        <th class="col-md-1">Control number</th>
                                        <th class="col-md-1">Entered by</th>
                                        <th class="col-md-1">Action</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

</section>
}

<!-- /.content -->
<!--modal placeholder-->
<div class="modal modal-primary fade" id="modalDefault">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>



@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    @if (appUser.isAdmin == false)
    {
        <script src="~/js/views/priceCommodity/price.js"></script>
    }
    else if (appUser.isAdmin == true)
    {
        <script src="~/js/views/priceCommodity/priceIsAdmin.js"></script>
    }
}

