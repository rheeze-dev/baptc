@model src.Models.Organization
@{
    ViewData["Title"] = "Reports";
    Layout = "_LayoutAdminlteReports";
}

<!-- Content Header (Page header) -->
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <input type="hidden" asp-for="@Model.organizationId" />
                            <table id="grid" name="grid" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th colspan="3"></th>
                                    </tr>
                                    <tr>
                                        <th colspan="3"><center>Accreditation</center></th>
                                    </tr>
                                    <tr>
                                        <th class="col-md-1">
                                            <select class="form-control" id="dropdownAccreditationDate">
                                                <option value="1">Accredited inter-traders</option>
                                                <option value="2">Accredited packers and porters</option>
                                                <option value="3">Accredited buyers</option>
                                                <option value="4">Accredited market facilitators</option>
                                                <option value="5">Accredited individual farmers</option>
                                            </select>
                                        </th>
                                        <th class="col-md-1">
                                        </th>
                                        <th class="col-md-1">
                                            <a class="btn btn-success btn-xs exportAccreditationDate"><i class='fa fa-download'></i> Export</a>
                                        </th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
<!-- /.content -->
<!--modal placeholder-->
<div class="modal modal-primary fade" id="modalDefault">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        $(".exportAccreditationDate").on("click", function (e) {
            var getSelectedDate = $("#dropdownAccreditationDate").val();
            $(".exportAccreditationDate").attr("href", "/api/Report/AccreditationReportDate?Date=" + getSelectedDate);
        });
    </script>
}

