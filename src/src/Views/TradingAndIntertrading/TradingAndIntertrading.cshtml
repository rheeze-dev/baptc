@model src.Models.Organization
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Inter Trading";
    ApplicationUser appUser = await UserManager.GetUserAsync(User);
    Layout = "_LayoutAdminlteTradingAndIntertrading";
}

<!-- Content Header (Page header) -->
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-md-6">
                                <a class="btn btn-success" style="margin-bottom:10px" onclick="ShowPopup('@Url.Action("AddEditTradingAndIntertrading","TradingAndIntertrading", new { org = Model.organizationId })')"><i class="fa fa-plus"></i> New inter-trading</a>
                            </div>
                            <table id="grid" name="grid" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        @*<th class="col-md-1">Date entered</th>*@
                                        <th class="col-md-1">Date</th>
                                        <th class="col-md-1">Farmers name</th>
                                        <th class="col-md-1">Farmers organization</th>
                                        <th class="col-md-1">Commodity</th>
                                        <th class="col-md-1">Volume (kg)</th>
                                        <th class="col-md-1">Production area</th>
                                        <th class="col-md-1">Inspector</th>
                                        <th class="col-md-1">Code</th>
                                        <th class="col-md-1">Action</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

</section>
<!-- /.content -->
<!--modal placeholder-->
<div class="modal modal-primary fade" id="modalDefault">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    @if (appUser.isAdmin == false)
    {
        <script src="~/js/views/tradingInspector/interTrading.js"></script>
    }
    else if (appUser.isAdmin == true)
    {
        <script src="~/js/views/tradingInspector/interTradingIsAdmin.js"></script>
    }
}

