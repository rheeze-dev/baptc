@model src.Models.Organization
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Accreditation";
    ApplicationUser appUser = await UserManager.GetUserAsync(User);
    Layout = "_LayoutAdminlteAccreditation";
}

<!-- Content Header (Page header) -->
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <input type="hidden" asp-for="@Model.organizationId" />
                            @*<div class="col-lg-2">
                                <div class="row">*@
                            <div class="col-md-6">
                                <a class="btn btn-success" style="margin-bottom:10px" onclick="ShowPopup('@Url.Action("AddEditIndividualFarmers","Accreditation", new { org = Model.organizationId })')"><i class="fa fa-plus"></i> New individual farmers</a>
                            </div>
                            @*</div>
                                </div>*@
                            <table id="grid" name="grid" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th class="col-md-1">Date of application</th>
                                        @*<th class="col-md-1">Counter</th>*@
                                        <th class="col-md-1">Association</th>
                                        @*<th class="col-md-1">Reference number</th>
        <th class="col-md-1">Id number</th>*@
                                        <th class="col-md-1">Name</th>
                                        @*<th class="col-md-1">Spouse name</th>
        <th class="col-md-1">Sitio</th>*@
                                        <th class="col-md-1">Barangay</th>
                                        @*<th class="col-md-1">Municipality</th>
        <th class="col-md-1">Province</th>*@
                                        <th class="col-md-1">Contact number</th>
                                        <th class="col-md-1">Birthdate (MM/DD/YYYY)</th>
                                        <th class="col-md-1">Plate number</th>
                                        <th class="col-md-1">Estimated land</th>
                                        <th class="col-md-1">Major crops</th>
                                        @*<th class="col-md-1">Land area per crop</th>
        <th class="col-md-1">Estimated produce</th>
        <th class="col-md-1">Planting</th>
        <th class="col-md-1">Harvesting</th>*@
                                        <th class="col-md-1">Control number</th>
                                        <th class="col-md-1">Action</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

</section>
<!-- /.content -->
<!--modal placeholder-->
<div class="modal modal-primary fade" id="modalDefault">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>



@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    @if (appUser.isAdmin == false)
    {
        <script src="~/js/views/accreditation/individualFarmers.js"></script>
    }
    else if (appUser.isAdmin == true)
    {
        <script src="~/js/views/accreditation/individualFarmersIsAdmin.js"></script>
    }
}

