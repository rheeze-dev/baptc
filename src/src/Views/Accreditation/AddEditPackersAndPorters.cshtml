@model src.Models.PackersAndPorters
@{
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">Add / Edit Data</h4>
</div>
<form onsubmit="return SubmitAddEdit(this)">
    <div class="box-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="IdNumber" class="control-label">Id number</label>
            <input asp-for="IdNumber" class="form-control" />
            <span asp-validation-for="IdNumber" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-lg-6 form-group">
                <label asp-for="NameOfAssociation" class="control-label">Name of association</label>
                <input asp-for="NameOfAssociation" class="form-control" />
                <span asp-validation-for="NameOfAssociation" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="PackerOrPorter" class="control-label">Type of work</label>
                    <select asp-for="PackerOrPorter" class="form-control">
                        <option value="Packer" selected>Packer</option>
                        <option value="Porter">Porter</option>
                        <option value="Packer and porter">Packer and porter</option>
                        <option value="Washer">Washer</option>
                        <option value="Driver">Driver</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-lg-6 form-group">
                <label asp-for="NickName" class="control-label">Nickname</label>
                <input asp-for="NickName" class="form-control" />
                <span asp-validation-for="NickName" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 form-group">
                <label asp-for="NameOfSpouse" class="control-label">Name of spouse</label>
                <input asp-for="NameOfSpouse" class="form-control" />
                <span asp-validation-for="NameOfSpouse" class="text-danger"></span>
            </div>
            <div class="col-lg-6 form-group">
                <label asp-for="ProvincialAddress" class="control-label">Provincial address</label>
                <input asp-for="ProvincialAddress" class="form-control" />
                <span asp-validation-for="ProvincialAddress" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 form-group">
                <label asp-for="PresentAddress" class="control-label">Present address</label>
                <input asp-for="PresentAddress" class="form-control" />
                <span asp-validation-for="PresentAddress" class="text-danger"></span>
            </div>
            <div class="col-lg-6 form-group">
                <label asp-for="Barangay" class="control-label"></label>
                <input asp-for="Barangay" class="form-control" />
                <span asp-validation-for="Barangay" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 form-group">
                <label asp-for="ContactNumber" class="control-label">Contact number</label>
                <input asp-for="ContactNumber" class="form-control" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>
            <div class="col-lg-6 form-group">
                <label asp-for="BirthDate" class="control-label">Birthdate(MM/DD/YYYY)</label>
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 form-group">
                <label asp-for="Requirements" class="control-label"></label>
                <input asp-for="Requirements" class="form-control" />
                <span asp-validation-for="Requirements" class="text-danger"></span>
            </div>
            <div class="col-lg-6 form-group">
                <label asp-for="Remarks" class="control-label">Remarks</label>
                <input asp-for="Remarks" class="form-control" />
                <span asp-validation-for="Remarks" class="text-danger"></span>
            </div>
        </div>
    </div>

        <div class="box-footer">
            <button type="submit" class="btn btn-primary pull-right"><i class="fa fa-save"></i> Submit</button>
            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
        </div>
</form>
<script>
    Ladda.bind('.btn', { timeout: 1000 });
</script>



