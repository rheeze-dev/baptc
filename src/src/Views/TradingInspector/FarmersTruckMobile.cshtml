@model src.Models.Organization
@{
    ViewData["Title"] = "Trading Inspector";
    Layout = "_LayoutAdminlteTradingInspector";
}

<!-- Content Header (Page header) -->
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-md-6">
                                <a class="btn btn-default btn-sm" style="margin-bottom:10px" href="@Url.Action("TradersTruckMobile","TradingInspector", new { org = Model.organizationId })">Traders <i class="fa fa-mobile-phone"></i></a>
                                <a class="btn btn-primary btn-sm" style="margin-bottom:10px" href="@Url.Action("FarmersTruckMobile","TradingInspector", new { org = Model.organizationId })">Farmers <i class="fa fa-mobile-phone"></i></a>
                                <a class="btn btn-default btn-sm" style="margin-bottom:10px" href="@Url.Action("ShortTripMobile","TradingInspector", new { org = Model.organizationId })">Short trip <i class="fa fa-mobile-phone"></i></a>
                            </div>
                            <table id="grid" name="grid" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th class="col-md-1">Time in</th>
                                        <th class="col-md-1">Plate number</th>
                                        <th class="col-md-1">Time inspected</th>
                                        <th class="col-md-1">Inspector</th>
                                        <th class="col-md-1">Status</th>
                                        <th class="col-md-1">Action</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</section>
<!-- /.content -->
<!--modal placeholder-->
<div class="modal modal-primary fade" id="modalDefault">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/views/tradingInspector/farmersTruckMobile.js"></script>
}

