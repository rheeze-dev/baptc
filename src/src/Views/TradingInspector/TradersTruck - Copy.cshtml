@model src.Models.Organization
@{
    ViewData["Title"] = "Trading Inspector";
    Layout = "_LayoutAdminlteTradingInspector";
}

<!-- Content Header (Page header) -->
<!-- Main content -->
<link rel="stylesheet" href="~/lib/DateTimePicker/bootstrap-datetimepicker.min.css" />
<section class="content">
    <div class="row">
        <div class="col-lg-10">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <input type="hidden" asp-for="@Model.organizationId" />
                            <table id="grid" name="grid" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th class="col-md-2">Date</th>
                                        <th class="col-md-2">Time</th>
                                        <th class="col-md-2">Plate number</th>
                                        <th class="col-md-2">Trader name</th>
                                        <th class="col-md-1">Estimated volume (kg)</th>
                                        <th class="col-md-2">Destination</th>
                                        <th class="col-md-1">Actions</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="col-lg-2">
            <div class="row">
                <div class="col-md-12">
                    <a class="btn btn-success" style="margin-bottom:10px" onclick="ShowPopup('@Url.Action("AddEditTradersTruck","TradingInspector", new { org = Model.organizationId })')"><i class="fa fa-plus"></i> New traders truck</a>
                </div>
            </div>
        </div>
    </div>

</section>
<!-- /.content -->
<!--modal placeholder-->
<div class="modal modal-primary fade" id="modalDefault">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>



@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/views/tradingInspector/tradersTruck.js"></script>
    <script src="~/lib/DateTimePicker/bootstrap-datetimepicker.min.js"></script>
}

