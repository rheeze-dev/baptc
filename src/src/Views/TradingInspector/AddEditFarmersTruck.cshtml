@model src.Models.FarmersTruck
@{
    Layout = null;
}

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Add / Edit Data</h4>
    </div>
<form onsubmit="return SubmitAddEdit(this)">
    <div class="box-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ticketingId" />
        <input type="hidden" asp-for="TimeIn" />
        <div class="form-group">
            <label asp-for="PlateNumber" class="control-label"></label>
            <input asp-for="PlateNumber" class="form-control" readonly />
            <span asp-validation-for="PlateNumber" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-lg-6 form-group">
                <label asp-for="Barangay" class="control-label"></label>
                <input asp-for="Barangay" class="form-control" />
                <span asp-validation-for="Barangay" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="FarmersName" class="control-label"></label>
                    <input asp-for="FarmersName" class="form-control" />
                    <span asp-validation-for="FarmersName" class="text-danger"></span>
                </div>
            </div>
        </div>
      
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="Organization" class="control-label"></label>
                    <input asp-for="Organization" class="form-control" />
                    <span asp-validation-for="Organization" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="Commodity" class="control-label"></label>
                    <input asp-for="Commodity" class="form-control" />
                    <span asp-validation-for="Commodity" class="text-danger"></span>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="Volume" class="control-label"></label>
                    <input asp-for="Volume" class="form-control" />
                    <span asp-validation-for="Volume" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="StallNumber" class="control-label"></label>
                    <input asp-for="StallNumber" class="form-control" />
                    <span asp-validation-for="StallNumber" class="text-danger"></span>
                </div>

            </div>
        </div>
        <div class="form-group">
            <label asp-for="FacilitatorsName" class="control-label"></label>
            <input asp-for="FacilitatorsName" class="form-control" />
            <span asp-validation-for="FacilitatorsName" class="text-danger"></span>
        </div>
    </div>

    <div class="box-footer">
        <button type="submit" class="btn btn-primary pull-right"><i class="fa fa-save"></i> Submit</button>
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
    </div>
</form>
<script>
    Ladda.bind('.btn', { timeout: 1000 });
    $('.form_datetime').datetimepicker({
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        showMeridian: 1
    });
</script>



