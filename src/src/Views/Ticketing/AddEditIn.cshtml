    $(document).ready(function () {
        $("select", "#typeOfTransaction").change(function () {
            var test = (this.value);
            //alert(test);
            if (test == "Trader truck") {
                $(".typeOfCar").show();
                $(".farmerTruck").hide();
                $(".shortTrip").hide();
                $(".payParking").hide();
                $(".driverName").hide();
                $(".traderTruck").show();
            }
            else if (test == "Farmer truck") {
                $(".typeOfCar").show();
                $(".traderTruck").hide();
                $(".shortTrip").hide();
                $(".payParking").hide();
                $(".driverName").hide();
                $(".farmerTruck").show();
            }
            else if (test == "Short trip") {
                $(".typeOfCar").show();
                $(".traderTruck").hide();
                $(".farmerTruck").hide();
                $(".payParking").hide();
                $(".driverName").hide();
                $(".shortTrip").show();
            }
            else if (test == "Pay parking") {
                $(".typeOfCar").hide();
                $(".driverName").show();
            }
            else if (test == "Gate pass") {
                $(".typeOfCar").hide();
                $(".driverName").show();
            }
        });

