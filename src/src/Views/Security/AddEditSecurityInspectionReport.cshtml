@model src.Models.SecurityInspectionReport
@{
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">Add / Edit Data</h4>
</div>
<form onsubmit="return SubmitAddEdit(this)">
    <div class="box-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ControlNumber" />

        <div class="form-group">
            <label asp-for="Location" class="control-label"></label>
            <select id="cars" asp-for="Location" class="form-control">
                <option value="Spot 1">Spot 1</option>
                <option value="Spot 2">Spot 2</option>
                <option value="Spot 3">Spot 3</option>
                <option value="Dry and cold storage">Dry and cold storage</option>
                <option value="Pay parking">Pay parking</option>
                <option value="Entrance">Entrance</option>
                <option value="Exit">Exit</option>
                <option value="Carrot section">Carrot section</option>
                <option value="Nursery (greenhouse)">Nursery (greenhouse)</option>
                <option value="UPLB cold storage back of guestel">UPLB cold storage back of guestel</option>
                <option value="Sewarage treatment plant back of guestel">Sewarage treatment plant back of guestel</option>
            </select>
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Action" class="control-label"></label>
            <input asp-for="Action" class="form-control" />
            <span asp-validation-for="Action" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Remarks" class="control-label"></label>
            <input asp-for="Remarks" class="form-control" placeholder="Optional" />
            <span asp-validation-for="Remarks" class="text-danger"></span>
        </div>

    </div>

    <div class="box-footer">
        <button type="submit" class="btn btn-primary pull-right"><i class="fa fa-save"></i> Submit</button>
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
    </div>
</form>
<script>
    Ladda.bind('.btn', { timeout: 1000 });
    $('.form_datetime').datetimepicker({
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        showMeridian: 1
    });
</script>



